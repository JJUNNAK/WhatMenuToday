<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/footspace_back"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/img_game"
        android:layout_width="301dp"
        android:layout_height="241dp"
        android:background="@drawable/ic_start_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/howplay_btn"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:background="@drawable/circle_burron_source"
        android:text="?"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toEndOf="@+id/time_btn"
        app:layout_constraintTop_toBottomOf="@+id/img_game"
        app:layout_constraintVertical_bias="0.006" />

    <Button
        android:id="@+id/time_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/game_button"
        android:text="Time"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView2"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/lottieAnimationView2"
        app:layout_constraintTop_toBottomOf="@+id/img_game" />

    <Button
        android:id="@+id/bottel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottel"
        android:textStyle="bold"
        android:background="@drawable/game_button"
        app:layout_constraintBottom_toTopOf="@+id/coin_btn"
        app:layout_constraintEnd_toEndOf="@+id/time_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/time_btn"
        app:layout_constraintTop_toBottomOf="@+id/time_btn" />

    <Button
        android:id="@+id/coin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coin"
        android:textStyle="bold"
        android:background="@drawable/game_button"
        app:layout_constraintBottom_toTopOf="@+id/dice_btn"
        app:layout_constraintEnd_toEndOf="@+id/bottel_btn"
        app:layout_constraintStart_toStartOf="@+id/bottel_btn"
        app:layout_constraintTop_toBottomOf="@+id/bottel_btn" />

    <Button
        android:id="@+id/dice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dice"
        android:textStyle="bold"
        android:background="@drawable/game_button"
        app:layout_constraintBottom_toTopOf="@+id/Number_btn"
        app:layout_constraintEnd_toEndOf="@+id/coin_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/coin_btn"
        app:layout_constraintTop_toBottomOf="@+id/coin_btn" />

    <Button
        android:id="@+id/Number_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textStyle="bold"
        android:background="@drawable/game_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dice_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dice_btn"
        app:layout_constraintTop_toBottomOf="@+id/dice_btn" />

    <Button
        android:id="@+id/easter_btn"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:background="#00FF"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/lottieAnimationView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toEndOf="@+id/Number_btn"
        app:layout_constraintTop_toBottomOf="@+id/img_game"
        app:layout_constraintVertical_bias="0.811" />


</androidx.constraintlayout.widget.ConstraintLayout>