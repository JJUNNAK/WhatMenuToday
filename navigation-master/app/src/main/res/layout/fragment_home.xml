<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_bg_gradient"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="172dp"
        android:layout_height="157dp"
        android:layout_marginTop="10dp"
        map:srcCompat="@drawable/ic_order_food" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 오늘 뭐 먹지?"
        android:textColor="#000812"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/cb2"
        android:layout_width="77dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="160dp"
        android:textColor="#000812"
        android:background="@drawable/korean_food_icon2"
        android:buttonTint="#373636"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/cb1"
        android:layout_width="77dp"
        android:layout_height="60dp"
        android:layout_marginTop="-61dp"
        android:layout_marginRight="80dp"
        android:buttonTint="#373636"
        android:background="@drawable/china_food_icon2"
        />

    <Button
        android:id="@+id/cb3"
        android:layout_width="77dp"
        android:layout_height="60dp"
        android:layout_marginTop="-61dp"
        android:layout_marginRight="-0dp"
        android:buttonTint="#373636"
        android:background="@drawable/japan_food_icon"

        />

    <Button
        android:id="@+id/cb4"
        android:layout_width="77dp"
        android:layout_height="60dp"
        android:layout_marginTop="-61dp"
        android:layout_marginRight="-80dp"
        android:buttonTint="#373636"
        android:background="@drawable/western_food_icon"
        />

    <Button
        android:id="@+id/cb5"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_marginTop="-60dp"
        android:layout_marginRight="-160dp"
        android:buttonTint="#373636"
        android:background="@drawable/bunsik_food_icon"
        android:textSize="19sp"
        android:textColor="#373636"
        android:textStyle="bold"
        />




    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        android:layout_marginTop="10dp"
        android:text="한식"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="78dp"
        android:layout_marginTop="-20dp"
        android:text="중식"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-3dp"
        android:layout_marginTop="-20dp"
        android:text="일식"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-83dp"
        android:layout_marginTop="-20dp"
        android:text="양식"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-160dp"
        android:layout_marginTop="-20dp"
        android:text="분식"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        android:layout_marginTop="10dp"
        map:srcCompat="@drawable/marker_green"
       />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-24.6dp"
        android:layout_marginRight="78dp"
        map:srcCompat="@drawable/marker_red"
       />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-3dp"
        android:layout_marginTop="-24.7dp"
        map:srcCompat="@drawable/marker_yellow"
        />
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-83dp"
        android:layout_marginTop="-24.5dp"
        map:srcCompat="@drawable/marker_blue"
       />
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-160dp"
        android:layout_marginTop="-24.5dp"
        map:srcCompat="@drawable/marker_magenta"
        />


    <Button
        android:id="@+id/btn_map"
        android:layout_width="293dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/corner_round"
        android:text=" 전체 보기 "
        android:textColor="#373636"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_banner"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/corner_round"
        android:text="배너"
        android:textColor="#373636"
        android:textSize="23sp"
        android:textStyle="bold" />

</LinearLayout>